{
  "name": "pyezza",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "scripts/*"
  ],
  "prisma": {
    "schema": "packages/database/schema.prisma"
  },
  "scripts": {
    "dev": "yarn workspace @repo/nextjs dev",
    "start": "yarn workspace @repo/nextjs start",
    "build:packages": "yarn workspace @repo/database build",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "migrate": "cd packages/database && npx prisma format && npx prisma migrate dev",
    "build": "yarn build:packages && cd apps/nextjs && yarn build"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@4.6.0",
  "dependencies": {
    "@tabler/icons-react": "^3.29.0",
    "clsx": "^2.1.1",
    "motion": "^12.0.1",
    "tailwind-merge": "^2.6.0"
  },
  "resolutions": {
    "dotenv-cli": "^7.4.1"
  }
}
