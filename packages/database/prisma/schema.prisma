generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum IntegrationType {
  slack
  zulip
}

enum ChannelType {
  socialsips
  wouldyourather
  spotlight
  celebration
}

enum MessageTemplateTags {
  fun
  hypothetical
  food
  cars
  games
  aspirational
}

enum MessageTemplateType {
  socialsips
  wouldyourather
  spotlight
}

enum MessageStatus {
  PENDING
  CANCELLED
  SENT
}

model User {
  id                 Int           @id @default(autoincrement())
  email              String        @unique
  imageUrl           String?
  name               String?
  externalProviderId String?       @unique
  integrations       Integration[]
}

model Integration {
  id                  Int             @id @default(autoincrement())
  publicId            String          @unique @default(nanoid(10))
  token               String?
  type                IntegrationType
  user                User            @relation(fields: [userId], references: [id])
  userId              Int
  botUserId           String?
  teamName            String?
  teamId              String          @unique
  appId               String?
  onboardingCompleted Boolean         @default(false)
  scope               String
  active              Boolean         @default(true)
  channels            Channel[]
}

model ChannelSetting {
  id         Int     @id @default(autoincrement())
  timezone   String  @default("Asia/Kolkata")
  timeOfday  Int     @default(36000)
  channel    Channel @relation(fields: [channelId], references: [id])
  channelId  Int     @unique
  everyNWeek Int     @default(1)
  daysOfWeek Int[]   @default([0, 2, 4])
}

model Channel {
  id            Int             @id @default(autoincrement())
  publicId      String          @unique @default(nanoid(12))
  active        Boolean         @default(true)
  channelId     String?
  channelName   String?
  type          ChannelType
  integration   Integration     @relation(fields: [integrationId], references: [id])
  integrationId Int
  setting       ChannelSetting?
  Message       Message[]
}

model MessageTemplate {
  id        Int                   @id @default(autoincrement())
  publicId  String                @unique @default(nanoid(12))
  content   String
  gif       String?
  type      MessageTemplateType
  topic     MessageTemplateTags[]
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  Message   Message[]
  active    Boolean               @default(true)
}

model Message {
  id                Int             @id @default(autoincrement())
  channelId         Int
  channel           Channel         @relation(fields: [channelId], references: [id])
  template          MessageTemplate @relation(fields: [messageTemplateId], references: [id])
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  messageTemplateId Int
  status            MessageStatus   @default(PENDING)
}
